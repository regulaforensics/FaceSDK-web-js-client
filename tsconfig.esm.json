{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "module": "ES2015",
    "outDir": "dist/esm-es5",
    "declaration": true,
    "declarationDir": "dist/lib",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "lib": [
      "es5",
      "es2015.promise",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
